<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">🍹 All our Cocktails</li>
  </ol>
</nav>

<div class="card-group">
  <% @cocktails.each do |cocktail| %>
    <div class="card-product m-3">
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-product-infos text-center">
        <h2 class="p-2"><%=cocktail.name%></h2>
        <td><%= link_to 'See more details', cocktail_path(cocktail), class: "btn btn-sm btn-outline-secondary" %></td>
        <td><%= link_to "Supprimer", cocktail_path(cocktail), method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: "Are you sure ?" } %></td>
      </div>
    </div>
  <% end %>
</div>

<%= link_to '➕ Add a New cocktail', new_cocktail_path, class:"btn btn-light p-2" %>

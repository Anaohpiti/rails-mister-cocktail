<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">All our Cocktails</li>
  </ol>
</nav>

<div class="card-group">
  <% @cocktails.each do |cocktail| %>
    <div class="card-product m-3">
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" %>
      <div class="card-product-infos">
        <h2><%=cocktail.name%></h2>
        <td><%= link_to 'See more details', cocktail_path(cocktail) %></td>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New cocktail', new_cocktail_path, class:"btn btn-light" %>
